{
  "name": "tykon",
  "description": "Generate Kotlin Source Files from TypeScript Definitions",
  "version": "1.0.0",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --production",
    "test": "jest",
    "doc": "bunx typedoc src/index.ts --out docs --plugin typedoc-github-theme --excludePrivate --excludeProtected"
  },
  "module": "src/index.ts",
  "type": "module",
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@jest/globals": "^29.7.0",
    "@types/bun": "latest",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "typedoc-github-theme": "^0.3.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "ts-morph": "^26.0.0"
  }
}
