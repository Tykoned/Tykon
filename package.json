{
  "name": "@tykoned/tykon",
  "description": "Generate Kotlin Source Files from TypeScript Definitions",
  "type": "module",
  "module": "src/index.ts",
  "main": "src/index.ts",
  "version": "1.0.5",
  "author": "gmitch215",
  "license": "MIT",
  "files": [
    "README.md",
    "LICENSE",
    "tsconfig.json",
    "typedoc.json",
    "src/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prettier": "bunx prettier --write .",
    "prettier:check": "bunx prettier --check .",
    "test": "jest",
    "test:log": "jest --logHeapUsage --detectOpenHandles > jest.log",
    "doc": "bunx typedoc --options typedoc.json",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@cloudflare/workers-types": "^4.20250529.0",
    "@jest/globals": "^29.7.0",
    "@types/bun": "latest",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "4.1.0",
    "ts-jest": "^29.4.1",
    "typedoc-github-theme": "^0.3.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "ts-morph": "^26.0.0"
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": "prettier --write"
  }
}
